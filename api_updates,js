// Route for dynamic alerts
app.get('/api/v1/notifications', authenticateToken, (req, res) => {
  const userAlerts = [
    { type: 'impact', message: 'You saved 5kg of CO2 this month by buying organic!' }
  ];
  res.json(userAlerts);
});

// Real-time Push (Simulated)
const broadcastAlert = (io, message) => {
  io.emit('product_update', {
    timestamp: new Date(),
    message: message
  });
};